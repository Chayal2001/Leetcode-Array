function sort_array(arr,length){
/*Function to sort the array in descending order
After sorting return the sorted array */


var flag = false;
for(var i=1; i<length; i++){
    for(var j=0; j<length-i; j++){
         if(arr[j]<arr[j+1]){
             [arr[j], arr[j+1]]=[arr[j+1], arr[j]]
             flag = true;
         }   
    }if(flag=false){
        break;
    }
}
return arr;

}
